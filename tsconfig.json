{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@hooks": ["./src/hooks"],
      "@utils": ["./src/utils"],
      "@services": ["./src/services"],
      "@screens/*": ["./src/screens/*"],
      "@types": ["./src/types"],
      "@components": ["./src/components"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
